<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="task3_persistence-unit">
        <jta-data-source>java:/MySqlDS</jta-data-source>
        <class>ormtask3.ormtask3.entities.Project</class>
        <class>ormtask3.ormtask3.entities.ProjectEventUpdate</class>
        <class>ormtask3.ormtask3.entities.Todo</class>
        <class>ormtask3.ormtask3.entities.TodoComments</class>
        <class>ormtask3.ormtask3.entities.TodoTags</class>
        <class>ormtask3.ormtask3.entities.TodoUpdates</class>
        <class>ormtask3.ormtask3.entities.TodoWatchers</class>
        <class>ormtask3.ormtask3.entities.Comment</class>
        <class>ormtask3.ormtask3.entities.ItemUpdate</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/task3" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="Online#9900" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
